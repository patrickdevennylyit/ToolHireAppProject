<Window x:Class="ToolHireAppProject.Dashboard"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ToolHireAppProject"
        mc:Ignorable="d"
        WindowState="Maximized"
        WindowStyle="ToolWindow"
        Title="Dashboard" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Images/dashback.jpg" Stretch="UniformToFill" Opacity=".20"></ImageBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="50*"/>
            <ColumnDefinition Width="50*"/>
        </Grid.ColumnDefinitions>

        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,10,0,10">
            <TextBox Name="tbxSearchText" Height="26" Width="100" Margin="10,0"/>
            <Button Name="btnSearch" Height="26" Width="100" Content="Search" Margin="10,0"/>
            <Button Name="btnReset" Height="26" Width="100" Content="reset" Margin="10,0"/>
        </StackPanel>

        <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,10,0,10">
            <Button Name="btnAdmin" Height="26" Width="100" Content="Admin" Margin="10,0"/>
            <Button Name="btnTool" Height="26" Width="100" Content="Tool" Margin="10,0"/>
            <Button Name="btnExit" Height="26" Width="100" Content="Exit" Margin="10,0"/>
        </StackPanel>

        <DockPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Margin="5,10,5,0">
            <Border BorderThickness="3" BorderBrush="Black" CornerRadius="10" Padding="4">
                <Border.Effect>
                    <DropShadowEffect Color="Gray"
                                      Opacity=".50"
                                      ShadowDepth="4"/>
                </Border.Effect>
                    <Frame Name="frnMain"/>
            </Border>
        </DockPanel>
    </Grid>
</Window>
